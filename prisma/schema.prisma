generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  email         String @unique
  //image         String
  name          String
  password      String
  designation   String
  role          Role
  vpId          Int?
  managerId     Int?
  averagePoints Float  @default(0)
  tasks         Task[]
}

model Invitation {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  email       String @unique
  role        Role
  designation String
}

enum Role {
  VP
  MANAGER
  EMPLOYEE
}

model Task {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  points      Float?
  status      String  @default("Pending")
  userId      String  @db.ObjectId
  user        User    @relation(fields: [userId], references: [id])
}

model Projects {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  projectRating Float
  //employeesName User all employee assign to this projects
  startingDate  DateTime
  endDate       DateTime
  //manager manager assign to respective project
}

