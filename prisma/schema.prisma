generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  email       String @unique
  //image         String
  name        String
  password    String
  designation String
  role        Role?
  rating      Float  @default(0)
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

model Projects {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  projectRating Float?
  //employeesName User all employee assign to this projects
  startingDate  DateTime
  endDate       DateTime
  //manager manager assign to respective project
}


